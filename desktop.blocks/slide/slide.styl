.slide {
    display: none;
    position: relative;
    padding: 16px;
    box-sizing: border-box;

    h1, h2, h3, h4 {
        text-align: center;
        font-weight: normal;
    }

    h1 {
        font-size: 28px;
        line-height: 28px
    }

    h2 {
        line-height: 24px
        font-size: 24px;
    }

    h3 {
        font-size: 20px;
        line-height: 20px
    }

    h4 {
        font-size: 16px;
        line-height: 16px
    }
}
